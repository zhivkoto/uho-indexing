# Uho Platform â€” Environment Variables
# ============================================================================
# Copy to .env and fill in values. Only DATABASE_URL, JWT_SECRET,
# JWT_REFRESH_SECRET, and RESEND_API_KEY are required.

# --- Required ---
DATABASE_URL=postgresql://user:password@localhost:5432/uho
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
RESEND_API_KEY=re_xxxxx

# --- Email ---
EMAIL_FROM=Uho <noreply@uho.dev>
EMAIL_DOMAIN=uho.dev

# --- Server ---
UHO_MODE=platform
API_PORT=3010
WS_PORT=3012
NODE_ENV=development
BASE_URL=http://localhost:3010
DASHBOARD_URL=http://localhost:3034
CORS_ORIGINS=http://localhost:3034

# --- Solana RPC ---
HELIUS_API_KEY=

# --- Google OAuth (optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- GitHub OAuth (optional) ---
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# --- Privy / Solana Wallet Auth (optional) ---
PRIVY_APP_ID=
PRIVY_APP_SECRET=

